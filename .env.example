# NOVA Agent Server Environment Variables
# Copy this to .env and fill in your values

# Required: Shared secret for authentication with Cloudflare Workers
NOVA_API_SECRET=your-secure-secret-here

# Required: OpenAI API key for agent reasoning
OPENAI_API_KEY=sk-proj-xxx

# Required: Anthropic API key for Claude
ANTHROPIC_API_KEY=sk-ant-xxx

# Required: Pinecone API key for doctrine search
PINECONE_API_KEY=pcsk_xxx

# Optional: Voyage AI for embeddings
VOYAGE_API_KEY=pa-xxx

# Server port (Railway sets this automatically)
PORT=8000
